<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/calculator_diaplay_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calculator_diaplay_view_height"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/calculator_diaplay_view_margin_v"
        android:layout_marginLeft="@dimen/calculator_diaplay_view_margin_h"
        android:layout_marginRight="@dimen/calculator_diaplay_view_margin_h"
        android:layout_marginTop="@dimen/calculator_diaplay_view_margin_v"
        android:background="@color/default_calculator_diaplay_view_bg"
        android:orientation="vertical"
        android:paddingRight="4dp" >

        <TextView
            android:id="@+id/calculator_history_display_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/calculator_display_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="20sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculator_diaplay_panel"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="4"
        android:useDefaultMargins="true" >

        <Button
            android:id="@+id/calculator_7"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/calculator_outline"
            android:text="7" />

        <Button
            android:id="@+id/calculator_8"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/calculator_outline"
            android:text="8" />

        <Button
            android:id="@+id/calculator_9"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@drawable/calculator_outline"
            android:text="9" />

        <Button
            android:id="@+id/calculator_divide"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@drawable/calculator_outline"
            android:text="/" />

        <Button
            android:id="@+id/calculator_mod"
            android:layout_column="4"
            android:layout_row="0"
            android:background="@drawable/calculator_outline"
            android:text="%" />

        <Button
            android:id="@+id/calculator_4"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/calculator_outline"
            android:text="4" />

        <Button
            android:id="@+id/calculator_5"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/calculator_outline"
            android:text="5" />

        <Button
            android:id="@+id/calculator_6"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/calculator_outline"
            android:text="6" />

        <Button
            android:id="@+id/calculator_multiple"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@drawable/calculator_outline"
            android:text="*" />

        <Button
            android:id="@+id/calculator_back"
            android:layout_column="4"
            android:layout_row="1"
            android:background="@drawable/calculator_outline"
            android:text="&lt;" />

        <Button
            android:id="@+id/calculator_1"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/calculator_outline"
            android:text="1" />

        <Button
            android:id="@+id/calculator_2"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/calculator_outline_unpress"
            android:text="2" />

        <Button
            android:id="@+id/calculator_3"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/calculator_outline"
            android:text="3" />

        <Button
            android:id="@+id/calculator_minus"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@drawable/calculator_outline"
            android:text="-" />

        <Button
            android:id="@+id/calculator_result"
            android:layout_column="4"
            android:layout_gravity="fill_vertical"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:background="@drawable/calculator_outline"
            android:text="=" />

        <Button
            android:id="@+id/calculator_0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3"
            android:background="@drawable/calculator_outline"
            android:text="0" />

        <Button
            android:id="@+id/calculator_dot"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@drawable/calculator_outline"
            android:text="." />

        <Button
            android:id="@+id/calculator_add"
            android:layout_column="3"
            android:layout_row="3"
            android:background="@drawable/calculator_outline"
            android:text="+" />
    </GridLayout>

</RelativeLayout>